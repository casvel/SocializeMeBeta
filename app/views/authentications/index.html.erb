<% yield(:title)  %>

<% if @authentications %>
    <% unless @authentications.empty? %>
        <p><strong> You can sign in to this account using:</strong></p>
        <div class = "authentificacions">
          <% for authentification in @authentications %>
              <div class = "authentification">
                <%= image_tag "#{authentification.provider}_32.png", :size => "32x32" %>
                <div class = "provider"><%= authentification.provider.titleize %></div>
                <div class = "uid"><%= authentification.uid %></div>
                <%= link_to "Delete", authentification, :confirm => 'Are you sure you want to remove this
                    authentication option?', :method => :delete, :class => "remove" %>
              </div>
          <% end %>
          <div class = "clear"></div>
        </div>
    <% end %>
<% else %>
    <p><strong>Sign up trough:</strong></p>
    <a href = "auth/twitter" class = "auth_provider">
      <%= image_tag "twitter_64.png", :size => "64x64", :alt => "Twitter" %>
    </a>
<% end %>

<div class = "clear"></div>